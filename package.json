{
  "name": "leo",
  "version": "1.0.0",
  "description": "A front end cli for angular vue and react project",
  "scripts": {
    "lint": "eslint --fix packages/**/*.js packages/**/bin/*",
    "lint-without-fix": "eslint packages/**/*.js packages/**/bin/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leo-tools/leo.git"
  },
  "keywords": [
    "leo",
    "CLi",
    "Front-end",
    "Angular",
    "Vue",
    "React"
  ],
  "author": "tc9011",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leo-tools/leo/issues"
  },
  "homepage": "https://github.com/leo-tools/leo#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@leo-tools/eslint-config-common": "0.0.2",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "packages/**/bin/*": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
